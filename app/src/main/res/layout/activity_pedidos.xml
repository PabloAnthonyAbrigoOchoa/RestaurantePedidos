<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTitPB"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#9C3737"
        android:gravity="center"
        android:text="@string/pb_restaurant"
        android:textColor="@color/white"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/textViewIndicaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/acontinuaci_n_marque_los_datos_de_su_p_dido"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbParaServirse"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="@string/para_llevar"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rbEntregaDomicilio"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="Para Entrega a Domicilio (adicional $10)"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDesayunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/d_e_s_a_y_u_n_o_s"
            android:textColor="#827717"
            android:textSize="18dp"
            android:background="#FBEDB7"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewDesayunos"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:srcCompat="@drawable/desayunos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxDN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/desayuno_normal_caf_o_leche_pan_o_tostadas_huevos_cocinados_y_jugo_de_frutas_30" />

            <CheckBox
                android:id="@+id/checkBoxDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Desayuno Buffet: variedad de alimentos del restaurante $60" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Desayuno Continental:cafÃ©,o leche, jugo, pan o tostadas, mermelada $50" />

            <CheckBox
                android:id="@+id/checkBoxDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/desayuno_americano_incluye_caf_o_leche_jugos_zumos_de_o_frutas_huevos_tostadas_mantequilla_40" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAlmuerzos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FBEDB7"
            android:gravity="center"
            android:text="@string/a_l_m_u_e_r_z_os"
            android:textColor="#827717"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewAlmuerzos"
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/almuerzos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/almuerzo_normal_sopa_arroz_con_carne_y_ensalada_mas_bebida_40" />

            <CheckBox
                android:id="@+id/checkBoxAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/almuerzo_buffet_caldo_o_sopa_arroz_o_fiedos_carne_asada_o_cocida_y_ensalada_mas_bebida_60" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/almuerzo_completo_entrada_sopa_o_caldo_plato_fuerte_carnes_cerdo_res_cordero_ensaladas_a_su_elecci_n_mas_bebida_70" />

            <CheckBox
                android:id="@+id/checkBoxAdeC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/almuerzo_de_la_casa_sopa_arroz_con_dos_tipos_de_carne_dos_tipos_de_ensalada_mas_bebida_y_postre_50" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegresarMenu"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9C3737"
                android:text="@string/regresar"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnCalcular"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C3737"
                android:onClick="calcular"
                android:text="@string/calcular"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnCancelar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C3737"
                android:onClick="cancelar"
                android:text="@string/cancelar"
                android:textColor="@color/white" />

        </LinearLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/doc"
            android:minHeight="30dp" />

        <TextView
            android:id="@+id/textViewTotalPagar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/total_a_pagar"
            android:textSize="22sp"
            android:textStyle="italic"
            android:textColor="#9C3737"/>

    </LinearLayout>

</LinearLayout>