<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="305dp"
            android:layout_height="221dp"
            app:srcCompat="@drawable/pblogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Quienes Somos?" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Somos un par de desarrolladores y diseñadores, aficionados por lo que hacemos, en este caso traemos un Sistema para la reservación de un pédido ya sea para llevar o a su vez una entrega a domicilio, somos principiantes pero estamos en la plena seguridad de que les va a gustar nuestro proyecto que tenemos en mente. #PB-RESTAURANT"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="#917522"/>

        <Button
            android:id="@+id/btnRegresarMenuP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="#917522"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>